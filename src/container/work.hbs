{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>

   {{#with main}}
    <main>
      
        <section>
            {{>title data="Work history"}}

            <div>
                <ul>
                    {{#each works}}
                     <li>
                         <div> {{position}} </div> 
                         
                         <br>

                         <div> {{duration.form}} - 
                             {{#if duration.to}} {{duration.to}} 
                             {{else}} (Працюю понині)
                             {{/if}} </div> 
                         <br>
                         <div>
                            {{#if company.url}}{{>link text=company.name href=company.url blank=true noLine=true}} 
                            {{/if}}                                                  
                            {{#unless company.url}} <b>{{company.name}}</b> 
                            {{/unless}}
                        </div> 
                        <br>
                        <div> 
                         Project ({{projectAmount}})
                        </div>
                        <br>
                        <ul>
                            {{#each projects}}
                            <li>
                                <div>  {{>link text=name href=url blank=true noLine=true}} </div>
                                </if>  
                                <br> 
                                <div> <p>{{about}}</p></div>
                                <br>
                                <div> 
                                    <em> {{nameStacks}} ({{stacksAmount}})</em>
                                </div>
                                <br>
                                <ul>
                                    {{#each stacks}}
                                        <li>
                                        <div> 
                                            <p>{{name}}</p>
                                        </div>
                                        </li>
                                    {{/each}}
                                </ul>
                                <br>
                                <div> 
                                    <em> {{nameAwards}} ({{awardsAmount}})</em>
                                </div>
                                <br>
                                <ul>
                                    {{#each awards}}
                                        <li>
                                        <div> 
                                            <p>{{name}}</p>
                                        </div>
                                        </li>
                                    {{/each}}
                                </ul>
                            </li>
                            {{/each}}
                        </ul>
                     </li>
                     {{/each}}
                </ul>
            </div>
        </section>            
    </main>
    {{/with}}
   </div> 

  
