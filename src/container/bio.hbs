{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

    <main>
         <section>
            <h1> {{name}} </h1>
            <p> Birthdate:{{birthdate}}, {{birthplace}}</p>
            <p>Deathdate: {{deathdate}}, {{deathplace}} </p>
            <p>Nationality: {{nationality}} </p>        
            <p> Occupation: {{occupation}} </p>
            <h3> Known_for: </h3>              
                <ul>
                     {{#each known_for}}
                    <li> <em> {{''}} </em></li>
                    {{/each}}
                </ul>                
            
            <h3>Education:</h3>
                <ul>
                     {{#each education}}
                    <li> Degree: {{degree}} </li>
                    <li> Field: {{field}} </li>
                    <li> Institution: {{institution}} </li>
                    <li> Year: {{degree}} </li>
                    {{/each}}
                </ul> 
                     <h3>Notable publications:</h3> 
                     <ol>
                        {{#each notable_publications}}
                    <li> <em> {{title}}, {{year}}. Publisher: {{publisher}}</em></li>
                    {{/each}}
                     </ol>
                    <h3>Partners:</h3>
                       <ol>
                        {{#each partners}}
                    <li> <em> {{name}}, Relationship: {{relationship}}. {{years}}</em></li>
                    {{/each}}
                     </ol>
                     <h3>Awards:</h3>
                       <ul>
                        {{#each awards}}
                    <li> <em> {{title}}, {{year}}. {{description}}</em></li>
                    {{/each}}
                     </ul>

                     <h3>Influences:</h3>
                     <ol>
                        {{#each influences}}
                    <li> <em> {{.}} </em></li>
                    {{/each}}
                     </ol>

                     <h3>Influenced:</h3>
                     <ol>
                        {{#each influenced}}
                    <li> <em> {{.}} </em></li>
                    {{/each}}
                     </ol>

                     <h3>Quotes:</h3>
                     <ol>
                        {{#each quotes}}
                    <li> <em> {{.}} </em></li>
                    {{/each}}
                     </ol>
                     <h3>Major discoveries:</h3>
                     <ul>
                        {{#each major_discoveries}}
                    <li> <em> {{title}}, {{year}}. {{description}}</em></li>
                    {{/each}}
                     </ul>

                      <h3>Contributions:</h3>
                   <p>
                      {{#with contributions}}
                     Title: <em> {{title}} </em> <br>
                    Description: <em> {{description}}</em><br>
                    Year: <em> {{ year}} </em><br>
                    Field: <em> {{field}} </em><br>
                    {{/with}}
                    </p>                   
        </section>       
        </main>
  
