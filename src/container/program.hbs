{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

    <main>
         <section>
            {{>nav}}
            {{#with program.excursion}}
            <h1> {{name}}</h1>
            <div>
                <b> {{location.city}} ({{location.country}}) </b>
            </div> <br>
            <div> date: {{date}} </div>

            <h2>Program:</h2>
            
            <ol> {{#each program}}
            <li> <h3>{{name}}</h3>
                <ul>               
                
                <li>type:<b>"{{type}}",</b></li>
                <li>duration: <b> {{duration}},</b></li>
                <li>details:
                    {{#with details}}
                    <br>                                                 
                        {{#with museum}} 
                            <h4>{{name}}</h4>                                                   
                            <ul>{{#with location}}
                                <li>address: {{address}}</li>
                                <li>city: {{city}}</li>
                                <li>country: {{country}} <br>
                                {{/with}} <br>
                                 <b> Exhibits: </b> <br> <br>
                                    <ol>{{#each exhibits}}                                      
                                    <li>name: {{name}}<br>
                                    {{#if artist}} artist: {{artist}}<br>{{/if}}
                                    description: {{description}}<br>
                                    audio_guide:  {{#if audio_guide}} yes 
                                     {{else}} no
                                     {{/if}} </li>
                                    <br>
                                    {{/each}}                                
                                    </ol>
                                </li>
                            </ul>
                        {{/with}}
                        {{#with venue}} 
                            <h4>{{name}}</h4>                                                   
                            <ul>{{#with location}}
                                <li>address: {{address}}</li>
                                <li>city: {{city}}</li>
                                <li>country: {{country}} <br>
                                {{/with}} <br>                                
                                </li>
                            </ul>                            
                        {{/with}}

                        {{#if performers}}
                         <b> Performers:</b> <br> <br>
                                <ol>{{#each performers}}
                                    <li> name: {{name}}<br>
                                        type: {{type}} <br> <br>
                                    </li>
                                    {{/each}}                                
                                </ol>
                        {{/if}}

                        <p>Guide: {{#with guide}} 
                            {{name}}, <br> 
                            language: {{language}}, <br>
                            rating: {{rating}}
                             {{/with}}</p>
                    {{/with}} 
                    </li>                    
                 </ul> 
                </li>               
             {{/each}} 
             </ol>
            {{/with}}         
        </section>       
    </main>
  
